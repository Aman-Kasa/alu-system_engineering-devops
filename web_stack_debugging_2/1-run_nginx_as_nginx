#!/usr/bin/env bash
# Configure Nginx to run as nginx user and listen on port 8080

# Ensure nginx user exists
if ! id "nginx" &>/dev/null; then
    useradd -r -s /bin/false nginx
fi

# Modify nginx configuration to use nginx user
sed -i 's/user\s*www-data/user nginx/' /etc/nginx/nginx.conf

# Modify default site to listen on port 8080
sed -i 's/listen\s*80;/listen 8080;/' /etc/nginx/sites-available/default

# Ensure correct permissions
chown -R nginx:nginx /etc/nginx
chown -R nginx:nginx /var/log/nginx
chown -R nginx:nginx /var/lib/nginx

# Kill any existing nginx processes
pkill -f nginx

# Start nginx as nginx user
su nginx -c "/usr/sbin/nginx -g 'daemon off;'"
