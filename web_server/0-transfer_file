#!/usr/bin/env bash
# This script transfers a specified file to the server's web_server directory

# Define variables
SERVER_IP="54.196.180.228"  # Replace with your server's IP
SERVER_USER="ubuntu"
DESTINATION_DIR="/home/ubuntu/alu-system_engineering-devops/web_server"

# Check if a file path is provided as an argument
if [ -z "$1" ]; then
  echo "Usage: $0 <file_path>"
  exit 1
fi

# Transfer the file
scp "$1" "${SERVER_USER}@${SERVER_IP}:${DESTINATION_DIR}"

# Check if the transfer was successful
if [ $? -eq 0 ]; then
  echo "File transferred successfully to ${DESTINATION_DIR}"
else
  echo "File transfer failed."
fi
